---
import { Charts } from "@/components/Index";
import Base from "@/layouts/Base.astro";
---

<Base title="Reportes">
  <section
    class="container pt-8 pb-4 bg-foreground min-h-screen flex gap-8 flex-col"
  >
    <div
      class="flex flex-col shadow-md border-border border rounded-md h-full flex-1 py-8 px-4 lg:flex-row bg-white"
    >
      <div class="text-black w-full px-4">
        <div class="flex justify-between">
          <h2 class="text-3xl font-bold text-primary my-4">Reportes</h2>
        </div>
        <hr class="text-black w-full h-1" />
        <Charts client:load />
      </div>
    </div>
  </section>
</Base>
