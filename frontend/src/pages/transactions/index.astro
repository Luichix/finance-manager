---
import Base from "@/layouts/Base.astro";
import TransactionList from "@/layouts/components/TransactionList.astro";
---

<Base title="Gestor de finanzas | DineroGestor">
  <section
    class="container pt-8 pb-4 bg-slate-50 min-h-screen flex gap-8 flex-col"
  >
    <div class="flex items-center justify-end gap-8">
      <label class="text-gray-400">
        Registros:
        <select
          id="select-items"
          class="px-4 py-2 border-1 border-secondary rounded-md text-secondary text-sm focus:outline-secondary"
        >
          <option>10</option>
          <option>15</option>
          <option>25</option>
          <option>50</option>
        </select>
      </label>
      <label class="text-gray-400">
        Fecha:
        <input
          id="select-date"
          type="date"
          class="px-4 py-2 border-1 border-secondary rounded-md text-secondary text-sm focus:outline-secondary"
        />
      </label>
    </div>
    <div
      class="flex flex-col shadow-md border-border border rounded-md h-full flex-1 py-8 px-4 lg:flex-row"
    >
      <div class="text-black w-full mx-4">
        <div class="flex justify-between">
          <h2 class="text-2xl font-bold text-primary my-5">Transacciones</h2>
        </div>
        <TransactionList />
      </div>
    </div>
  </section>
</Base>
